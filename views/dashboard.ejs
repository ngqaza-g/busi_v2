                      <div class="led">
                        <div></div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>

              <div class="col">
                <div class="card">
                  <div class="card-body">
                    <div class="card-title">Humidity</div>
                    <div id="humidity_led" class="led_wrapper">
                      <div class="led">
                        <div></div>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>

              <div class="col">
                <div class="card">
                  <div class="card-body">
                    <div class="card-title">Fan</div>
                      <label class="switch">
                        <input type="checkbox" id="fan_switch">
                        <span class="slider round"></span>
                      </label>
                  </div>
                </div>
              </div>
              
              
            </div>
          </div>

          <div class="col p-4">
          <img src="http://localhost:5000/video_feed" alt="">
          </div>

        </div>
      </div>
