<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Dashboard"}) %> 
<body>
    <div class="flex-grow-1">
      <%- include('partials/navbar') %> 


      <div class="conatiner">
        <div class="row">
          <div class="col p-4">

            <div class="row">

              <div class="col">
                <div class="card mt-4" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title">Temperature</h5>
                    <div id="temperature"></div>
                  </div>
                </div>
              </div>

              <div class="col">
                <div class="card mt-4" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title">Humidity</h5>
                    <div id="humidity"></div>
                  </div>
                </div>
              </div>


            </div>

            <div class="row mt-4">

              <div class="col">
                <div class="card">
                  <div class="card-body">
                    <div class="card-title">Smoke</div>
